<section class="relative min-h-screen flex items-center justify-center overflow-hidden" role="banner">
  <!-- Background -->
  <div class="absolute inset-0 z-0">
    <!-- Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-stone-100 via-sage-50 to-olive-100"></div>
    
    <!-- Abstract Light Pattern -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-gradient-to-r from-gold-200 to-gold-300 rounded-full filter blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-gradient-to-r from-sage-200 to-olive-200 rounded-full filter blur-3xl animate-pulse delay-1000"></div>
    </div>
    
    <!-- Subtle Texture Overlay -->
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23D4AF37" fill-opacity="0.03"%3E%3Ccircle cx="30" cy="30" r="1"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="max-w-4xl mx-auto">
      <!-- Main Headline -->
      <h1 class="text-4xl sm:text-5xl lg:text-7xl font-serif font-bold text-deep-500 mb-6 leading-tight animate-fade-in-up">
        <span class="block">One Lord.</span>
        <span class="block text-gold-600">One Faith.</span>
        <span class="block">One Family.</span>
      </h1>

      <!-- Subheading -->
      <p class="text-lg sm:text-xl lg:text-2xl text-deep-400 mb-8 max-w-3xl mx-auto font-light leading-relaxed animate-fade-in-up" style="animation-delay: 0.2s;">
        The Church is not a building. It's the community of all who follow Jesus. 
        <span class="block mt-2 text-gold-600 font-medium">Welcome home.</span>
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 animate-fade-in-up" style="animation-delay: 0.4s;">
        <a 
          href="https://hub.churchgate.org" 
          class="group inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-gold-500 to-gold-600 rounded-full hover:from-gold-600 hover:to-gold-700 hover:scale-105 transform transition-all duration-300 shadow-lg hover:shadow-xl focus:ring-4 focus:ring-gold-300"
          target="_blank"
          rel="noopener noreferrer"
        >
          Enter the Community
          <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform duration-200" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
        
        <a 
          href="#revelation-quote" 
          class="inline-flex items-center justify-center px-6 py-3 text-lg font-medium text-deep-500 border-2 border-deep-300 rounded-full hover:bg-deep-500 hover:text-white hover:border-deep-500 transform hover:scale-105 transition-all duration-300 focus:ring-4 focus:ring-deep-200"
        >
          Discover Our Vision
        </a>
      </div>

      <!-- Scroll Indicator -->
      <div class="animate-gentle-bounce animate-fade-in" style="animation-delay: 0.6s;">
        <a href="#revelation-quote" class="inline-flex flex-col items-center text-deep-400 hover:text-gold-600 transition-colors duration-200 group">
          <span class="text-sm font-medium mb-2 opacity-75 group-hover:opacity-100">Scroll to explore</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>